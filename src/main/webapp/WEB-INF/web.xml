<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">


  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.presentation.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>ru.job4j.presentation.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/reg.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ru.job4j.presentation.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>ru.job4j.presentation.MainPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index.do</url-pattern>
  </servlet-mapping>
    <servlet>
        <servlet-name>AddSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.CreateSellOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddSellOrder</servlet-name>
        <url-pattern>/create.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangeSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.ChangeSellOrderStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeSellOrder</servlet-name>
        <url-pattern>/change.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.DeleteSellOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteSellOrder</servlet-name>
        <url-pattern>/delete.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.UpdateSellOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateSellOrder</servlet-name>
        <url-pattern>/update.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAllSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.GetAllSellOrders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllSellOrder</servlet-name>
        <url-pattern>/getAllOrders.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PostNewSellOrder</servlet-name>
        <servlet-class>ru.job4j.presentation.PostNewSellOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PostNewSellOrder</servlet-name>
        <url-pattern>/post.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetSellOrderById</servlet-name>
        <servlet-class>ru.job4j.presentation.GetSellOrderById</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSellOrderById</servlet-name>
        <url-pattern>/getOrder.do</url-pattern>
    </servlet-mapping>
</web-app>
